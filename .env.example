# Copy to .env and edit values
MYSQL_ROOT_PASSWORD=replace_with_root_password
MYSQL_DATABASE=exampledb
MYSQL_USER=exampleuser
MYSQL_PASSWORD=examplepass

# DHCP/DNS settings used by dnsmasq (demonstrative)
DHCP_RANGE_START=192.168.77.50
DHCP_RANGE_END=192.168.77.150
DHCP_NETMASK=255.255.255.0
DNS_DOMAIN=localdomain

# MacVlan Network Configuration
# WARNING: Requires host network interface configuration
# Check your network interface name with: ip link show (Linux) or ipconfig (Windows)
MACVLAN_PARENT_INTERFACE=eth0
MACVLAN_SUBNET=192.168.1.0/24
MACVLAN_GATEWAY=192.168.1.1
MACVLAN_IP_RANGE=192.168.1.100/28

# MacVlan DHCP Configuration (for real network integration)
MACVLAN_DHCP_RANGE_START=192.168.1.100
MACVLAN_DHCP_RANGE_END=192.168.1.115
MACVLAN_DNS_SERVER=192.168.1.1
